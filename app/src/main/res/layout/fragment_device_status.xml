<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$PlaceholderFragment"
    >

    <TextView android:id="@+id/section_label" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btexit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="exit"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/callDirectCommLbl"
        android:layout_alignStart="@+id/btcommuta" />

    <Button
        android:id="@+id/btcommuta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:text="commuta"
        android:layout_below="@+id/section_label"
        android:layout_centerHorizontal="true" />

    <TextView android:text="Chk internet cmd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btcommuta"
        android:layout_alignParentStart="true"
        android:layout_marginTop="52dp"
        android:id="@+id/lastOperationLbl" />

    <TextView
        android:text=".....vvvvvvv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lastOperation"
        android:layout_alignTop="@+id/lastOperationLbl"
        android:layout_alignParentEnd="true" />

    <TextView android:text="IntenetOpenCommand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lastOperationLbl"
        android:layout_alignParentStart="true"
        android:layout_marginTop="52dp"
        android:id="@+id/totInternetCommLbl" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totInternetComm"
        android:layout_alignTop="@+id/totInternetCommLbl"
        android:layout_alignParentEnd="true" />

    <TextView android:text="TotalOpenCommand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/totInternetCommLbl"
        android:layout_alignParentStart="true"
        android:layout_marginTop="52dp"
        android:id="@+id/totCommLbl" />

    <TextView
        android:text="o"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/totComm"
        android:layout_alignTop="@+id/totCommLbl"
        android:layout_alignParentEnd="true" />

    <TextView android:text="CallDirectOpenCommand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/totCommLbl"
        android:layout_alignParentStart="true"
        android:layout_marginTop="52dp"
        android:id="@+id/callDirectCommLbl" />

    <TextView
        android:text="o"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/callDirectComm"
        android:layout_alignTop="@+id/callDirectCommLbl"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
